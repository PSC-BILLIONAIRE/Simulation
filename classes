##Creation des plats

pizza = Plat('pizza',2)
sushi = Plat('sushi',1)
tacos = Plat('tacos',3)
brochette = Plat('brochette',0)
salade_cesar = Plat('salade_cesar',4)
salade_verte = Plat('salade_verte',5)
