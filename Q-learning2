def utilite_espere(etat , action):
	L = [Proba(etat1 , etat2 , action)*utilité(etat2) for etat2 in ETATS]
	return sum(L)
	
def utilite_espere (etat): 	
	L = [utilite_espere (etat , action) for action in ACTION]
	return recompense(etat) + gamma*max(L)
	
